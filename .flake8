[flake8]
exclude = .git,__pycache__,__init__.py,venv/,*/migrations/*,*/tests/*,*/settings/local.py
max-line-length = 120
max-complexity = 12
filename = *.py
accept-encodings = utf-8
inline-quotes = single
import-order-style = google
application-import-names = mysite,store,authentication

extend-ignore = I001

[isort]
known_django = django
known_third_party = rest_framework,rest_framework_simplejwt,dj_rest_auth,allauth
known_first_party = mysite,store,authentication
default_section = THIRDPARTY
multi_line_output = 3
line_length = 120
include_trailing_comma = True
force_grid_wrap = 0
combine_as_imports = True
no_lines_before = STDLIB,DJANGO
sections = FUTURE,STDLIB,DJANGO,THIRDPARTY,FIRSTPARTY,LOCALFOLDER
